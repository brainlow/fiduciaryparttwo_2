<div class="page-header">
  <h1>
    Assets
    <a href="/assets/new" class="btn btn-lg btn-success">New Asset</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "assets_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :asset_type_cont, "Asset type contains" %>
    <%= f.text_field :asset_type_cont, :class => "form-control", :placeholder => "Asset type contains" %>
  </div>

<div class="form-group">
          <%= f.label :beg_date, "Beg date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='beg_dategteqPicker'>
                  <%= f.text_field :beg_date_gteq, :class => "form-control", :placeholder => "Beg date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='beg_datelteqPicker'>
                  <%= f.text_field :beg_date_lteq, :class => "form-control", :placeholder => "Beg date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#beg_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#beg_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#beg_dategteqPicker').on("dp.change", function (e) {
                  $('#beg_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#beg_datelteqPicker').on("dp.change", function (e) {
                  $('#beg_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :end_shares, "End shares" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :end_shares_gteq, :class => "form-control", :placeholder => "End shares greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :end_shares_lteq, :class => "form-control", :placeholder => "End shares less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :beg_shares, "Beg shares" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :beg_shares_gteq, :class => "form-control", :placeholder => "Beg shares greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :beg_shares_lteq, :class => "form-control", :placeholder => "Beg shares less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
  <%= f.label :end_value, "End value" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :end_value_gteq, :class => "form-control", :placeholder => "End value greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :end_value_lteq, :class => "form-control", :placeholder => "End value less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :beg_value, "Beg value" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :beg_value_gteq, :class => "form-control", :placeholder => "Beg value greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :beg_value_lteq, :class => "form-control", :placeholder => "Beg value less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :matter_matter_type_cont, "Matter matter_type contains" %>
      <%= f.text_field :matter_matter_type_cont, :class => "form-control", :placeholder => "Matter matter_type contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/assets" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#assets_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Matter</th>
        <th>Beg value</th>
        <th>End value</th>
        <th>Description</th>
        <th>Beg shares</th>
        <th>End shares</th>
        <th>Beg date</th>
        <th>Asset type</th>
        <th>Actions</th>
      </tr>

      <% @assets.each do |asset| %>
      <tr>
        <td>
          <% if asset.matter.present? %>
            <a href="/matters/<%= asset.matter.id %>">
              <%= asset.matter.matter_type %>
            </a>
          <% end %>
        </td>
        <td><%= asset.beg_value %></td>
        <td><%= asset.end_value %></td>
        <td><%= asset.description %></td>
        <td><%= asset.beg_shares %></td>
        <td><%= asset.end_shares %></td>
        <td><%= asset.beg_date %></td>
        <td><%= asset.asset_type %></td>
        <td>
          <a href="/assets/<%= asset.id %>" class="btn btn-primary">Show</a>
          <a href="/assets/<%= asset.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_asset/<%= asset.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @assets, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
