<div class="page-header">
  <h3>Matter #<%= @matter.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Matter type</dt>
      <dd><%= @matter.matter_type %></dd>

      <dt>Matter name</dt>
      <dd><%= @matter.matter_name %></dd>

      <dt>Matter number</dt>
      <dd><%= @matter.matter_number %></dd>

      <dt>Matter state</dt>
      <dd><%= @matter.matter_state %></dd>

      <dt>Matter county</dt>
      <dd><%= @matter.matter_county %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/matters" class="btn btn-primary">
        Back
      </a>
      <a href="/matters/<%= @matter.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_matter/<%= @matter.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Matter has many assets -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Assets
      </li>

      <% @matter.assets.each do |asset| %>
        <li class="list-group-item">
          <a href="/assets/<%= asset.id %>">
            <%= asset.matter_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/assets/<%= asset.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/assets/<%= asset.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_asset/<%= asset.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_asset" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for matter_id -->
      <input type="hidden" name="matter_id" value="<%= @matter.id %>">

      <!-- Label and input for amount -->
      <div class="form-group">
        <label for="amount" class="control-label">
          Amount
        </label>

        <input type="text" id="amount" name="amount" placeholder="Amount" class="form-control" value="">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="">
      </div>

      <!-- Label and input for shares -->
      <div class="form-group">
        <label for="shares" class="control-label">
          Shares
        </label>

        <input type="text" id="shares" name="shares" placeholder="Shares" class="form-control" value="">
      </div>

      <!-- Label and input for acq_date -->
      <div class="form-group">
        <label for="acq_date" class="control-label">
          Acq date
        </label>

        <input type="text" id="acq_date" name="acq_date" placeholder="Acq date" class="form-control" value="">
      </div>

      <!-- Label and input for asset_type -->
      <div class="form-group">
        <label for="asset_type" class="control-label">
          Asset type
        </label>

        <input type="text" id="asset_type" name="asset_type" placeholder="Asset type" class="form-control" value="">
      </div>

      <!-- Label and input for ticker -->
      <div class="form-group">
        <label for="ticker" class="control-label">
          Ticker
        </label>

        <input type="text" id="ticker" name="ticker" placeholder="Ticker" class="form-control" value="">
      </div>

      <!-- Label and input for account_number -->
      <div class="form-group">
        <label for="account_number" class="control-label">
          Account number
        </label>

        <input type="text" id="account_number" name="account_number" placeholder="Account number" class="form-control" value="">
      </div>

      <!-- Label and input for institution -->
      <div class="form-group">
        <label for="institution" class="control-label">
          Institution
        </label>

        <input type="text" id="institution" name="institution" placeholder="Institution" class="form-control" value="">
      </div>

      <!-- Label and input for account_type -->
      <div class="form-group">
        <label for="account_type" class="control-label">
          Account type
        </label>

        <input type="text" id="account_type" name="account_type" placeholder="Account type" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Asset
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
