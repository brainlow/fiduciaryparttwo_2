<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All asset values
    </h1>

    <a href="/asset_values/new" class="btn btn-block btn-outline-secondary">
      Add a new asset value
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "asset_value_templates/asset_values_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Asset
        </th>

        <th>
          Date
        </th>

        <th>
          Amount
        </th>

        <th>
          Shares
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @asset_values.each do |asset_value| %>
      <tr>
        <td>
          <%= asset_value.id %>
        </td>

        <td>
          <% if asset_value.asset.present? %>
            <a href="/assets/<%= asset_value.asset.id %>">
              <%= asset_value.asset.matter_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= asset_value.date %>
        </td>

        <td>
          <%= asset_value.amount %>
        </td>

        <td>
          <%= asset_value.shares %>
        </td>

        <td>
          <%= time_ago_in_words(asset_value.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(asset_value.updated_at) %> ago
        </td>

        <td>
          <a href="/asset_values/<%= asset_value.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @asset_values, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
