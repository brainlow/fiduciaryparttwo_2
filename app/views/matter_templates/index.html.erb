<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All matters
    </h1>

    <a href="/matters/new" class="btn btn-block btn-outline-secondary">
      Add a new matter
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "matter_templates/matters_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Matter type
        </th>

        <th>
          Matter name
        </th>

        <th>
          Matter number
        </th>

        <th>
          Matter state
        </th>

        <th>
          Matter county
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @matters.each do |matter| %>
      <tr>
        <td>
          <%= matter.id %>
        </td>

        <td>
          <%= matter.matter_type %>
        </td>

        <td>
          <%= matter.matter_name %>
        </td>

        <td>
          <%= matter.matter_number %>
        </td>

        <td>
          <%= matter.matter_state %>
        </td>

        <td>
          <%= matter.matter_county %>
        </td>

        <td>
          <%= time_ago_in_words(matter.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(matter.updated_at) %> ago
        </td>

        <td>
          <a href="/matters/<%= matter.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @matters, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
