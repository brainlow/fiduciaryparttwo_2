<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Assets

    <a data-toggle="collapse" href="#matter_assets_new_form">
      Add asset
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @matter.assets.each do |asset| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/assets/<%= asset.id %>">
          <%= asset.matter_id %>
        </a>

        <a href="/delete_asset_from_matter/<%= asset.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="matter_assets_new_form">
        <%= render partial: "matter_templates/matter_assets_new_form" %>
      </div>
    </div>

  </ul>
</div>
