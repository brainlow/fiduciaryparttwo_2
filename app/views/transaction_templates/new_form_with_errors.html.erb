<% if @transaction.present? %>
  <% if @transaction.errors.any? %>
    <% @transaction.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new transaction
</h1>


<hr>

<form action="/create_transaction" method="post">

  <div class="form-group">
    <label for="asset_id">
      Asset
    </label>

    <%= select_tag(:asset_id, options_from_collection_for_select(Asset.all, :id, :matter_id, @transaction.asset_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="shares">
      Shares
    </label>

    <input type="text" id="shares" name="shares" class="form-control" value="<%= @transaction.shares %>">
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @transaction.date %>">
  </div>

  <div class="form-group">
    <label for="amount">
      Amount
    </label>

    <input type="text" id="amount" name="amount" class="form-control" value="<%= @transaction.amount %>">
  </div>

  <div class="form-group">
    <label for="category">
      Category
    </label>

    <textarea id="category" name="category" class="form-control" rows="3"><%= @transaction.category %></textarea>
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @transaction.description %></textarea>
  </div>

  <div class="form-group">
    <label for="payee">
      Payee
    </label>

    <textarea id="payee" name="payee" class="form-control" rows="3"><%= @transaction.payee %></textarea>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="distribution">
    <input id="distribution" class="form-check-input" name="distribution" type="checkbox" <%= "checked" if @transaction.distribution %>>
    <label for="distribution" class="form-check-label">
      Distribution
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create transaction
  </button>
</form>

<hr>

<a href="/transactions">
  Go back
</a>
