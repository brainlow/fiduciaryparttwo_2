<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All organizations
    </h1>

    <a href="/organizations/new" class="btn btn-block btn-outline-secondary">
      Add a new organization
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "organization_templates/organizations_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "organization_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Url
        </th>

        <th>
          User
        </th>

        <th>
          Logo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @organizations.each do |organization| %>
      <tr>
        <td>
          <%= organization.id %>
        </td>

        <td>
          <%= organization.name %>
        </td>

        <td>
          <%= organization.address %>
        </td>

        <td>
          <%= organization.url %>
        </td>

        <td>
          <%= organization.user_id %>
        </td>

        <td>
          <img src='<%= organization.logo %>' class='img-fluid'>
        </td>

        <td>
          <%= time_ago_in_words(organization.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(organization.updated_at) %> ago
        </td>

        <td>
          <a href="/organizations/<%= organization.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @organizations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
