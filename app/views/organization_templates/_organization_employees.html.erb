<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Employees

    <a data-toggle="collapse" href="#organization_employees_new_form">
      Add occupation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @organization.employees.each do |occupation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/occupations/<%= occupation.id %>">
          <%= occupation.user_id %>
        </a>

        <a href="/delete_occupation_from_organization/<%= occupation.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="organization_employees_new_form">
        <%= render partial: "organization_templates/organization_employees_new_form" %>
      </div>
    </div>

  </ul>
</div>
