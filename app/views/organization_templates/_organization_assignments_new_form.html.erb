<form action="/create_assignment_from_organization" method="post">

  <div class="form-group">
    <label for="role">
      Role
    </label>

    <input type="text" id="role" name="role" class="form-control" value="<%= @assignment.role %>">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="matter_id">
      Matter
    </label>

    <%= select_tag(:matter_id, options_from_collection_for_select(Matter.all, :id, :matter_type, @assignment.matter_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="organization_id" value="<%= @organization.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create assignment
  </button>
</form>
