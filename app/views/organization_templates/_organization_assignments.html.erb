<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Assignments

    <a data-toggle="collapse" href="#organization_assignments_new_form">
      Add assignment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @organization.assignments.each do |assignment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/assignments/<%= assignment.id %>">
          <%= assignment.role %>
        </a>

        <%if current_user == assignment.user %>
          <a href="/delete_assignment_from_organization/<%= assignment.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="organization_assignments_new_form">
        <%= render partial: "organization_templates/organization_assignments_new_form" %>
      </div>
    </div>

  </ul>
</div>
