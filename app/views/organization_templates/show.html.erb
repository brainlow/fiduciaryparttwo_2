<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Organization #<%= @organization.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/organizations" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/organizations/<%= @organization.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit organization
        </a>
      </div>

      <div class="col">
        <a href="/delete_organization/<%= @organization.id %>" class="btn btn-block btn-outline-secondary">
          Delete organization
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @organization.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <div>
          <%= render partial: "organization_templates/one_photo_map" %>
        </div>
      </dd>

      <dt>
        Url
      </dt>
      <dd>
        <%= @organization.url %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @organization.user_id %>
      </dd>

      <dt>
        Logo
      </dt>
      <dd>
        <img src="<%= @organization.logo %>" class="img-fluid">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@organization.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@organization.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "organization_templates/organization_assignments" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "organization_templates/organization_employees" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "organization_templates/organization_users" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "organization_templates/organization_matters" %>
  </div>
</div>
