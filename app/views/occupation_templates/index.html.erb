<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All occupations
    </h1>

    <a href="/occupations/new" class="btn btn-block btn-outline-secondary">
      Add a new occupation
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "occupation_templates/occupations_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Organization
        </th>

        <th>
          Role
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @occupations.each do |occupation| %>
      <tr>
        <td>
          <%= occupation.id %>
        </td>

        <td>
          <% if occupation.user.present? %>
            <a href="/users/<%= occupation.user.id %>">
              <%= occupation.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if occupation.organization.present? %>
            <a href="/organizations/<%= occupation.organization.id %>">
              <%= occupation.organization.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= occupation.role %>
        </td>

        <td>
          <%= time_ago_in_words(occupation.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(occupation.updated_at) %> ago
        </td>

        <td>
          <a href="/occupations/<%= occupation.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @occupations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
