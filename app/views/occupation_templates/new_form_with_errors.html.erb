<% if @occupation.present? %>
  <% if @occupation.errors.any? %>
    <% @occupation.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new occupation
</h1>


<hr>

<form action="/create_occupation" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @occupation.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="organization_id">
      Organization
    </label>

    <%= select_tag(:organization_id, options_from_collection_for_select(Organization.all, :id, :name, @occupation.organization_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="role">
      Role
    </label>

    <input type="text" id="role" name="role" class="form-control" value="<%= @occupation.role %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create occupation
  </button>
</form>

<hr>

<a href="/occupations">
  Go back
</a>
