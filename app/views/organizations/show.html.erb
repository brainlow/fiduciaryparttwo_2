<div class="page-header">
  <h3>Organization #<%= @organization.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @organization.name %></dd>

      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>Url</dt>
      <dd><%= @organization.url %></dd>

      <dt>User</dt>
      <dd>
        <% if @organization.user.present? %>
          <a href="/users/<%= @organization.user_id %>">
            <%= @organization.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Role</dt>
      <dd><%= @organization.role %></dd>

      <dt>Logo</dt>
      <dd><img src="<%= @organization.logo %>" class="img-responsive"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/organizations" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @organization.user %>
        <a href="/organizations/<%= @organization.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_organization/<%= @organization.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Organization has many relationships -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Relationships
      </li>

      <% @organization.relationships.each do |relationship| %>
        <li class="list-group-item">
          <a href="/relationships/<%= relationship.id %>">
            <%= relationship.id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/relationships/<%= relationship.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/relationships/<%= relationship.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_relationship/<%= relationship.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_relationship" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for role -->
      <div class="form-group">
        <label for="role" class="control-label">
          Role
        </label>

        <input type="text" id="role" name="role" placeholder="Role" class="form-control" value="">
      </div>

      <!-- Label and input for matter_id -->
      <div class="form-group">
        <label for="matter_id" class="control-label">
          Matter
        </label>

        <%= select_tag(:matter_id, options_from_collection_for_select(Matter.all, :id, :matter_type), :class => "form-control") %>
      </div>

      <!-- Label and input for organization_id -->
      <input type="hidden" name="organization_id" value="<%= @organization.id %>">

      <button class="btn btn-block btn-success">
        Create Relationship
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @organization.address_latitude %>,
        "lng": <%= @organization.address_longitude %>,
        "infowindow": "<h5><%= @organization.created_at %></h5><small><%= @organization.address_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>