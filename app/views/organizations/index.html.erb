<div class="page-header">
  <h1>
    Organizations
    <a href="/organizations/new" class="btn btn-lg btn-success">New Organization</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Url</th>
        <th>User</th>
        <th>Role</th>
        <th>Logo</th>
        <th>Actions</th>
      </tr>

      <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.address %></td>
        <td><%= organization.url %></td>
        <td>
          <% if organization.user.present? %>
            <a href="/users/<%= organization.user.id %>">
              <%= organization.user.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= organization.role %></td>
        <td><img src='<%= organization.logo %>' class='img-responsive'></td>
        <td>
          <a href="/organizations/<%= organization.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == organization.user %>
            <a href="/organizations/<%= organization.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_organization/<%= organization.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @organizations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>