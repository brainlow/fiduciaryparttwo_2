<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Asset Values

    <a data-toggle="collapse" href="#asset_asset_values_new_form">
      Add asset value
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @asset.asset_values.each do |asset_value| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/asset_values/<%= asset_value.id %>">
          <%= asset_value.asset_id %>
        </a>

        <a href="/delete_asset_value_from_asset/<%= asset_value.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="asset_asset_values_new_form">
        <%= render partial: "asset_templates/asset_asset_values_new_form" %>
      </div>
    </div>

  </ul>
</div>
