<form action="/create_asset_value_from_asset" method="post">

  <input type="hidden" name="asset_id" value="<%= @asset.id %>">

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @asset_value.date %>">
  </div>

  <div class="form-group">
    <label for="amount">
      Amount
    </label>

    <input type="text" id="amount" name="amount" class="form-control" value="<%= @asset_value.amount %>">
  </div>

  <div class="form-group">
    <label for="shares">
      Shares
    </label>

    <input type="text" id="shares" name="shares" class="form-control" value="<%= @asset_value.shares %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create asset value
  </button>
</form>
