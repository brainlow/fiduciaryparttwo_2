<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All assets
    </h1>

    <a href="/assets/new" class="btn btn-block btn-outline-secondary">
      Add a new asset
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "asset_templates/assets_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Matter
        </th>

        <th>
          Description
        </th>

        <th>
          Asset type
        </th>

        <th>
          Ticker
        </th>

        <th>
          Account number
        </th>

        <th>
          Institution
        </th>

        <th>
          Account type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @assets.each do |asset| %>
      <tr>
        <td>
          <%= asset.id %>
        </td>

        <td>
          <% if asset.matter.present? %>
            <a href="/matters/<%= asset.matter.id %>">
              <%= asset.matter.matter_type %>
            </a>
          <% end %>
        </td>

        <td>
          <%= asset.description %>
        </td>

        <td>
          <%= asset.asset_type %>
        </td>

        <td>
          <%= asset.ticker %>
        </td>

        <td>
          <%= asset.account_number %>
        </td>

        <td>
          <%= asset.institution %>
        </td>

        <td>
          <%= asset.account_type %>
        </td>

        <td>
          <%= time_ago_in_words(asset.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(asset.updated_at) %> ago
        </td>

        <td>
          <a href="/assets/<%= asset.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @assets, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
