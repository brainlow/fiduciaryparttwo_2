<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Asset #<%= @asset.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/assets" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/assets/<%= @asset.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit asset
        </a>
      </div>

      <div class="col">
        <a href="/delete_asset/<%= @asset.id %>" class="btn btn-block btn-outline-secondary">
          Delete asset
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Matter
      </dt>
      <dd>
        <% if @asset.matter.present? %>
          <a href="/matters/<%= @asset.matter_id %>">
            <%= @asset.matter.matter_type %>
          </a>
        <% end %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @asset.description %>
      </dd>

      <dt>
        Asset type
      </dt>
      <dd>
        <%= @asset.asset_type %>
      </dd>

      <dt>
        Ticker
      </dt>
      <dd>
        <%= @asset.ticker %>
      </dd>

      <dt>
        Account number
      </dt>
      <dd>
        <%= @asset.account_number %>
      </dd>

      <dt>
        Institution
      </dt>
      <dd>
        <%= @asset.institution %>
      </dd>

      <dt>
        Account type
      </dt>
      <dd>
        <%= @asset.account_type %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@asset.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@asset.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "asset_templates/asset_transactions" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "asset_templates/asset_asset_values" %>
  </div>
</div>
