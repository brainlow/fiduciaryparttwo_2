<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Employees

    <a data-toggle="collapse" href="#user_employees_new_form">
      Add occupation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.employees.each do |occupation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/occupations/<%= occupation.id %>">
          <%= occupation.user_id %>
        </a>

      </li>
    <% end %>

  </ul>
</div>
