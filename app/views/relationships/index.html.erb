<div class="page-header">
  <h1>
    Relationships
    <a href="/relationships/new" class="btn btn-lg btn-success">New Relationship</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "relationships_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :role_cont, "Role contains" %>
    <%= f.text_field :role_cont, :class => "form-control", :placeholder => "Role contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "User Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='usergteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_gteq, :class => "form-control", :placeholder => "User Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='userlteqcreated_atPicker'>
                  <%= f.text_field :user_created_at_lteq, :class => "form-control", :placeholder => "User Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#usergteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#userlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#usergteqcreated_atPicker').on("dp.change", function (e) {
                  $('#userlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#userlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#usergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :matter_matter_type_cont, "Matter matter_type contains" %>
      <%= f.text_field :matter_matter_type_cont, :class => "form-control", :placeholder => "Matter matter_type contains" %>
    </div>

<div class="form-group">
      <%= f.label :organization_name_cont, "Organization name contains" %>
      <%= f.text_field :organization_name_cont, :class => "form-control", :placeholder => "Organization name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/relationships" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#relationships_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Role</th>
        <th>Matter</th>
        <th>Organization</th>
        <th>Actions</th>
      </tr>

      <% @relationships.each do |relationship| %>
      <tr>
        <td>
          <% if relationship.user.present? %>
            <a href="/users/<%= relationship.user.id %>">
              <%= relationship.user.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= relationship.role %></td>
        <td>
          <% if relationship.matter.present? %>
            <a href="/matters/<%= relationship.matter.id %>">
              <%= relationship.matter.matter_type %>
            </a>
          <% end %>
        </td>
        <td>
          <% if relationship.organization.present? %>
            <a href="/organizations/<%= relationship.organization.id %>">
              <%= relationship.organization.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/relationships/<%= relationship.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == relationship.user %>
            <a href="/relationships/<%= relationship.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_relationship/<%= relationship.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @relationships, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
