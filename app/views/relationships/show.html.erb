<div class="page-header">
  <h3>Relationship #<%= @relationship.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @relationship.user.present? %>
          <a href="/users/<%= @relationship.user_id %>">
            <%= @relationship.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Role</dt>
      <dd><%= @relationship.role %></dd>

      <dt>Matter</dt>
      <dd>
        <% if @relationship.matter.present? %>
          <a href="/matters/<%= @relationship.matter_id %>">
            <%= @relationship.matter.matter_type %>
          </a>
        <% end %>
      </dd>

      <dt>Organization</dt>
      <dd>
        <% if @relationship.organization.present? %>
          <a href="/organizations/<%= @relationship.organization_id %>">
            <%= @relationship.organization.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/relationships" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @relationship.user %>
        <a href="/relationships/<%= @relationship.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_relationship/<%= @relationship.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
