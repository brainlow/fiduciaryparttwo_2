<!-- Validation failure messages -->
<% if @fiduciary.errors.any? %>
  <% @fiduciary.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Fiduciary #<%= @fiduciary.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_fiduciary/<%= @fiduciary.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="control-label">
          First name
        </label>

        <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @fiduciary.first_name %>">
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>

        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @fiduciary.last_name %>">
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @fiduciary.address %>">
      </div>

      <!-- Label and input for matter_id -->
      <div class="form-group">
        <label for="matter_id" class="control-label">
          Matter
        </label>

        <%= select_tag(:matter_id, options_from_collection_for_select(Matter.all, :id, :matter_type, @fiduciary.matter_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Fiduciary
      </button>
      or
      <a href="/fiduciaries/<%= @fiduciary.id %>">Cancel</a>
    </form>
  </div>
</div>
