<div class="page-header">
  <h1>
    Fiduciaries
    <a href="/fiduciaries/new" class="btn btn-lg btn-success">New Fiduciary</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Address</th>
        <th>Matter</th>
        <th>Actions</th>
      </tr>

      <% @fiduciaries.each do |fiduciary| %>
      <tr>
        <td><%= fiduciary.first_name %></td>
        <td><%= fiduciary.last_name %></td>
        <td><%= fiduciary.address %></td>
        <td><%= fiduciary.matter_id %></td>
        <td>
          <a href="/fiduciaries/<%= fiduciary.id %>" class="btn btn-primary">Show</a>
          <a href="/fiduciaries/<%= fiduciary.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_fiduciary/<%= fiduciary.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
